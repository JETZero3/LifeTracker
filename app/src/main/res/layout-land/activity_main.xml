<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context="com.example.jetze.lifetracker.MainActivity">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/texts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/p3p4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/p4Life"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20"
                    android:rotation="180"
                    android:textSize="100sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p3Life"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20"
                    android:rotation="180"
                    android:textSize="100sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/p1p2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/p1Life"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20"
                    android:textSize="100sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p2Life"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20"
                    android:textSize="100sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/p3p4Buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/p4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/p4_up"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p4Down5"
                            android:onClick="decreaseP4_5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right|bottom"
                            android:layout_weight="1"
                            android:background="@drawable/br"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:rotation="180"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:text="-5"
                            android:textSize="20dp"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p4Up5"
                            android:onClick="increaseP4_5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right|top"
                            android:layout_weight="1"
                            android:background="@drawable/tr"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:rotation="180"
                            android:text="+5"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p4_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p4Down1"
                            android:onClick="decreaseP4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left|bottom"
                            android:background="@drawable/bl"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:rotation="180"
                            android:text="-1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p4Up1"
                            android:onClick="increaseP4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left|top"
                            android:background="@drawable/tl"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:rotation="180"
                            android:text="+1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/p3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/p3_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p3Down5"
                            android:onClick="decreaseP3_5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right|bottom"
                            android:layout_weight="1"
                            android:background="@drawable/br"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:rotation="180"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:text="-5"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p3Up5"
                            android:onClick="increaseP3_5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right|top"
                            android:layout_weight="1"
                            android:background="@drawable/tr"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:rotation="180"
                            android:text="+5"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p3_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p3Down1"
                            android:onClick="decreaseP3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left|bottom"
                            android:background="@drawable/bl"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:rotation="180"
                            android:text="-1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p3Up1"
                            android:onClick="increaseP3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left|top"
                            android:background="@drawable/tl"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:rotation="180"
                            android:text="+1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/p1p2Buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/p1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/p1_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p1Up1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/tl"
                            android:gravity="left|top"
                            android:onClick="increaseP1"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:text="+1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p1Down1"
                            android:onClick="decreaseP1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="left|bottom"
                            android:layout_weight="1"
                            android:background="@drawable/bl"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="-1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p1_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p1Up5"
                            android:onClick="increaseP1_5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right|top"
                            android:layout_weight="1"
                            android:background="@drawable/tr"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="+5"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p1Down5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:alpha="0.5"
                            android:background="@drawable/br"
                            android:gravity="right|bottom"
                            android:onClick="decreaseP1_5"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:text="-5"
                            android:textColor="#FFFFFF"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/p2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/p2_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p2Up1"
                            android:onClick="increaseP2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="left|top"
                            android:layout_weight="1"
                            android:background="@drawable/tl"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:text="+1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p2Down1"
                            android:onClick="decreaseP2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="left|bottom"
                            android:layout_weight="1"
                            android:background="@drawable/bl"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:text="-1"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/p2_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/p2Up5"
                            android:onClick="increaseP2_5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right|top"
                            android:layout_weight="1"
                            android:background="@drawable/tr"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:text="+5"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                        <Button
                            android:id="@+id/p2Down5"
                            android:onClick="decreaseP2_5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right|bottom"
                            android:layout_weight="1"
                            android:background="@drawable/br"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:text="-5"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:alpha="0.5"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>